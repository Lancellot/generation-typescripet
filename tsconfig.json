{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Facilita o import sem extensão
    "allowImportingTsExtensions": false,

    // Opcional: define entrada e saída
    // "rootDir": "./src",
    // "outDir": "./dist",

    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}